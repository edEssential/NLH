<section class="parallax-bg2 parallax colored clearfix marginUp" id="form-home" data-type="background" data-speed="10">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2 class="formTitle">Forgot your password?</h2>
		</div>

		<div class="cmsWrapper3">
				<div class="formWrapper">
					<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
					<%= devise_error_messages! %>
						<%= f.label :email, class: 'formText' %><br/>
			    		<%= f.email_field :email, class: 'email text_areaArea'  %><br /><br />
			    		<%= f.submit "Send me reset password instructions" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>

