<section class="parallax-bg2 parallax colored clearfix marginUp" id="form-home" data-type="background" data-speed="10">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2 class="formTitle">Sign in</h2>
		</div>

		<div class="cmsWrapper3">
				<div class="formWrapper">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
						<%= f.label :email, class: 'formText' %><br/>
			    		<%= f.email_field :email, class: 'email text_areaArea'  %><br /><br />
						<%= f.label :password, class: 'formText' %><br/>
			    		<%= f.password_field :password, class: 'email text_areaArea'  %><br /><br />
						<% if devise_mapping.rememberable? -%>
					    	<div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "formText" %></div>
						<% end -%>
			    		<%= f.submit "Sign in" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>



