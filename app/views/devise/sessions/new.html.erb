<div class="formText formFade">
	<p class="formHeader Gray">Sign in</p><br /><br />
	<div class="form">	
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		  <%= f.label :email, class: 'formFieldT2'  %>
		  <%= f.email_field :email, :autofocus => true, class: 'formFieldT2'  %><br /><br />

		  <%= f.label :password, class: 'formFieldT2'  %>
		  <%= f.password_field :password, class: 'formFieldT2'  %><br /><br />

		  <% if devise_mapping.rememberable? -%>
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %><br /><br />
		  <% end -%>

		  <%= f.submit "Sign in", class: 'formFieldT2'  %>
		<% end %>
	</div>
</div>
