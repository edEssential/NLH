<section class="parallax-bg2 parallax colored clearfix marginUp" id="form-home" data-type="background" data-speed="10">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2 class="formTitle2">Add/edit site content here</h2>
		</div>

		<div class="cmsWrapper">
			<div class="releases">
				<div class="divHeader">Home page</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @homeposts.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>ABOUT TEXT</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<tr class="tableRow">
									<td width="93%"><%= @homepost.info %></td>
									<td width="5%"></td>
									<td width="2%">
										<input type="hidden" value="videos" class="modal-model-type">
										<input type="hidden" value=<%= @homepost.id %> class="modal-object-id">
										<%= link_to image_tag('edit2.png'), edit_homepost_path(@homepost) %>
									</td>
									<td width="2%"><%= link_to image_tag('delete2.png'), @homepost, :confirm => 'Are you sure you want to delete the homepage content?', :method => :delete %></td>
								</tr>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO HOMEPAGE CONTENT YET... ADD SOME BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
				</div>
			</div>
			<% if @homeposts.count < 0 %>
				<h6><%= link_to 'Edit homepage content', edit_homepost_path(@homepost), :class => "button" %></h6>
			<% end %>
		</div>
		<div class="cmsWrapper">
			<div class="releases">
				<div class="divHeader">Videos</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @works.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>TITLE</th>
									<th>VIDEO URL</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<% @works.each do |w| %>
									<tr class="tableRow">
										<td width="22%"><%= w.title %></td>
										<td width="74%"><%= w.url %></td>
										<td width="2%">
											<input type="hidden" value="videos" class="modal-model-type">
											<input type="hidden" value=<%= w.id %> class="modal-object-id">
											<%= link_to image_tag('edit2.png'), edit_work_path(w) %>
										</td>
										<td width="2%"><%= link_to image_tag('delete2.png'), w, :confirm => 'Are you sure you want to delete this video?', :method => :delete %></td>
									</tr>
								<% end %>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVE NO VIDEOS YET... ADD SOME BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
				</div>
			</div>
			<h6><%= link_to 'Add new video', new_work_path, :class => "button" %></h6>
		</div>
		<div class="cmsWrapper2">
			<div class="releases">
				<div class="divHeader">Contact admin</div>
				<div class="tableWrapper">
					<div class="tableContent">
						<% if @contacts.count > 0 %>
							<table width="100%">
								<tr class="tableHeader">
									<th>SET UP BY</th>
									<th>EMAIL</th>
									<th>CONTACT TEXT</th>
								</tr>
								<tr><hr class="ruler"/></tr>
								<tr class="tableRow">
									<td width="15%"><%= @admin.name %></td>
									<td width="25%"><%= @admin.email %></td>
									<td width="56%"><%= @admin.messagetext %></td>
									<td width="2%">
										<input type="hidden" value="contacts" class="modal-model-type">
										<input type="hidden" value=<%= @admin.id %> class="modal-object-id">
										<%= link_to image_tag('edit2.png'), edit_contact_path(@admin) %>
									</td>
									<td width="2%"><%= link_to image_tag('delete2.png'), @admin, :confirm => 'Are you sure you want to delete the admin text?', :method => :delete %></td>
								</tr>
							</table>
						<% else %>
							<table width="100%"><tr class="tableRow empty"><td><em>YOU HAVEN'T SET UP THE ADMIN VIEW YET... DO SO BELOW ?!</em></td></tr></table>
						<% end %>
					</div>
				</div>
			</div>
			<% if @contacts.count < 1 %>
				<h6><%= link_to 'Create contact text', new_contact_path, :class => "button" %></h6>
			<% else %>
				<h6><%= link_to 'Download contacts list', contacts_xls_path, :class => "button" %></h6>
			<% end %>
		</div>
		
	</div>
</section>