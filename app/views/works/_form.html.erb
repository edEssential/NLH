<section class="parallax-bg2 parallax colored clearfix marginUp padded2">
	<div class="content dark padded container">
		
		<div class="title twelve columns">
			<h2 class="bigger">Edit / Add project here!</h2>
			<span class="border"></span>
		</div>

		<%= form_for @work do |f| %>
			<div class="formWrapper">
				<%= f.label :Title, class: "formText" %><br/>
    			<%= f.text_field :title, class: 'email text-area' %><br /><br />
				<%= f.label :About, class: "formText" %><br/>
    			<%= f.text_area :homepageinfo, class: 'email text-area' %><br /><br />
				<%= f.label :Client, class: "formText" %><br/>
    			<%= f.text_field :client, class: 'email text-area' %><br /><br />
				<%= f.label :Video_URL, class: "formText" %><br/>
    			<%= f.text_field :url, class: 'email text-area' %><br /><br />
				<%= f.label :Post_to_the_homepage?, class: "formText" %><br/>
    			<%= f.check_box :posthome %>
				<%= f.label :Placeholder_image, class: "formText"  %><br />
			 	<%= f.file_field :image, class: 'email text-area'  %><br /><br />
			</div>
			<div class="title grid-full">
				<%= f.submit "Sign in", class: "button" %><br/><br/>
			</div>
		<% end %>
	</div>
</section>
