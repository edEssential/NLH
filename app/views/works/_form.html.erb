<section class="parallax-bg2 parallax colored clearfix marginUp" id="form-home" data-type="background" data-speed="10">
	<div class="content dark padded container">
		
		<div class="title grid-full">
			<h2 class="formTitle">Edit / Add project here!</h2>
		</div>

		<div class="cmsWrapper3">
				<div class="formWrapper">
					<%= form_for(@work) do |f| %>
						<%= f.label :Video_url?, class: 'formText' %><br/>
			    		<%= f.text_field :url, class: 'email text-area'  %><br /><br />
						<%= f.label :Image_plaecholder, class: 'formText'  %><br/>
						<%= f.file_field :image  %><br /><br />
						<%= f.label :title, class: 'formText' %><br/>
			    		<%= f.text_field :title, class: 'email text-area'  %><br /><br />
						<%= f.label :Post_to_homepage, class: 'formText' %><br/>
						<%= f.collection_select :posthome, [[false, 'No'] ,[true, 'Yes']], :first, :last %><br /><br />
						<%= f.label :About, class: 'formText' %><br/>
			    		<%= f.text_area :homepageinfo, class: 'email text-areaArea' %><br /><br />
						<%= f.label :client, class: 'formText' %><br/>
			    		<%= f.text_field :client, class: 'email text-area'  %><br /><br />
			    		<%= f.submit %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>
